@model FeedbackViewModel
@{
    ViewData["Title"] = "FeedBack";
}
<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Icons (اختياري) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Bootstrap JS (مع Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



<div class="container mt-5 d-flex justify-content-center" mb-5>
    <div class="card shadow-lg border-0 w-50">
        <div class="card-body p-4">
            <h4 class="card-title mb-4 text-center">Send Us Your Feedback</h4>

            <form asp-action="FeedBack" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label asp-for="Message" class="form-label fw-bold">Your Message</label>
                    <textarea asp-for="Message" rows="5" class="form-control" placeholder="Write your feedback here..."></textarea>
                    <span asp-validation-for="Message" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" style="color:black;background-color:#FF6B3D" class="btn  btn-lg">
                        <i class="bi bi-send-fill me-2"></i> Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}


