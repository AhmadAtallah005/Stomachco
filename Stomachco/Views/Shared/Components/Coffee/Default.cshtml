@model IEnumerable<Coffee>

<div class="rest" id="rest">
	<div class="container">

		<div class="restlogo">
			<p>All Coffees</p>
		</div>

		<div class="row">
			@foreach (var item in Model)
			{
				
			<div class="package">
				<a asp-action="view2" asp-controller="Home" class="comp">
						<img width="100" height="100" src="@Url.Content(item.CoffeeImage)" alt="Coffee Photo" />
					<div class="description">
						<p class="restname">@item.CofeName</p>
						<p class="restinfo">@item.CofeDescription</p>
					</div>
				</a>
			</div>
			}



		</div>
	</div>
</div>