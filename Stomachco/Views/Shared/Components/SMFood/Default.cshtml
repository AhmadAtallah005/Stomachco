@model IEnumerable<SMFood>
<link rel="stylesheet" href="~/css/view.css" />


<form method="post">
    <div class="menu" id="rest">
        <div class="container">
            <h1 class="head_m">OUR FOOD MENU</h1>
            <div class="row">

                @foreach (var item in Model)
                {


                    <div class="card">
                        <div class="image">
                            <img width="100" height="100" src="@Url.Content(item.FoodImg)" alt="Coffee Photo" />
                        </div>
                        <div class="description">
                            <h3>@item.SMItem</h3>
                            <span class="price">@item.Price@item.PriceUnit</span>
                        </div>
                        <input class="number"
                               type="number"
                               required
                               value="0"
                               min="0"
                               max="5"
                               name="@item.SMItem" />
                    </div>
                }

            </div>
            <input class="submit" type="submit" value=" Cart" />
            <i style="
              font-size: 20px;
              color: white;
              position: absolute;
              left: 52%;
              bottom: -40px;
            "
               class="fa-solid fa-cart-shopping"></i>
        </div>
    </div>
</form>
