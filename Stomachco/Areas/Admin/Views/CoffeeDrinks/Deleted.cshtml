@model IEnumerable<Stomachco.Models.CoffeeDrinks>

@{
    ViewData["Title"] = "Deleted";
}

<h1>Deleted</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrinkName)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.DrinkImg)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.isPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDeleted)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DrinkName)
            </td>
            <td>
                    <img width="100" height="100" src="@Url.Content(item.DrinkImg)" alt="Restaurant Photo" />
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.isPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isDeleted)
            </td>
           
            <td>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a> |
                    <a asp-action="Remove" asp-route-id="@item.ID" class="btn btn-warning">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
