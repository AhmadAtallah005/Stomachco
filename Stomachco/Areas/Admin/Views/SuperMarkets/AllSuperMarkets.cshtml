@model IEnumerable<Stomachco.Models.SuperMarket>

@{
    ViewData["Title"] = "AllSuperMarkets";
}

<h1>All SuperMarkets</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SMName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SMName)
            </td>
            <td>
                    <img width="100" height="100" src="@Url.Content(item.SMImage)" alt="SuperMarket Photo" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                    <a asp-action="index" class="btn btn-light">Return To List</a>
        </tr>
}
    </tbody>
</table>
