@model IEnumerable<Stomachco.Models.Restaurant>

@{
	ViewData["Title"] = "Index";
}

<h3 class="m-3">Restaurants DashBoard</h3>
<div class="d-flex justify-content-between">
	<p>
		<a asp-action="Create" class="btn btn-danger m-2">Create New</a>
		<a asp-action="AllRestaurnts" class="btn btn-danger m-2">All Restaurants</a>


	</p>
	<p>
		<a asp-action="Deleted" class="btn btn-danger m-2">Deleted</a>

		<a asp-action="Abroved" class="btn btn-danger m-2">Abroved</a>
	</p>
</div>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.RestName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RestDesciption)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RestImage)
			</th>



			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.RestName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RestDesciption)
				</td>
				<td>
					<img width="100" height="100" src="@Url.Content(item.RestImage)" alt="Restaurant Photo" />
				</td>



				<td>
					<a asp-action="Edit" asp-route-id="@item.RestaurantId" class="btn btn-danger">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.RestaurantId" class="btn btn-dark">Details</a> |
					<a asp-action="SoftDelete" asp-route-id="@item.RestaurantId" class="btn btn-warning">Soft Delete</a> |
					<a asp-action="UnPublished" asp-route-id="@item.RestaurantId" class="btn btn-outline-danger">UnPublished</a>
				</td>
			</tr>
		}
	</tbody>
</table>
